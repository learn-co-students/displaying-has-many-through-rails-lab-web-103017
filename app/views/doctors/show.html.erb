<h1>Doctor info</h1>
<%= @doctor.name %>
<%= @doctor.department %>

<h2>appointments:</h2>
<% @doctor.appointments.each do |appointment| %>
<%= appointment.appointment_datetime.strftime('%B %d, %Y at %H:%M %p') %> with
<%= link_to appointment.patient.name, patient_path(appointment.patient) %><br>
<% end %>
